@model IQueryable<UserManagement.DAL.Models.Users.UserLogin>

@{
    ViewBag.Title = "Users";
}

<section class="" aria-labelledby="aspnetTitle">

    <div class="row">
        <h2>@ViewBag.Title</h2>
    </div>

    <br />

    <div class="table-responsive">
        <button class="btn btn-success" type="button">@Html.ActionLink("Add User", "Register", "UserLogins", new { @class = "nav-link" })</button>

        <table class="table table-hover table-striped">

            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().UserName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().UserRole.RoleType)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().EmailAddress)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="table-active">
                        <td>@user.UserName</td>
                        <td>@user.UserRole.RoleType</td>
                        <td>@user.EmailAddress</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <button class="btn btn-secondary" type="button">@Html.ActionLink("Edit", "Edit", "UserLogins", new { id = user.UserLoginId }, new { @class = "nav-link" })</button>
                            <button class="btn btn-danger" type="button">@Html.ActionLink("Delete", "Delete", "UserLogins", new { id = user.UserLoginId }, new { @class = "nav-link" })</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>