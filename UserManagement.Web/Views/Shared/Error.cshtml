@{
    ViewBag.Title = "Error";
}

<style>
    .error-container {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
</style>

<section class="error-container" aria-labelledby="aspnetTitle">
    <div class="alert alert-danger" role="alert">
        <h1>@ViewBag.Title!</h1>
        <h4>An error occurred while processing your request.</h4>
        @if (@TempData["ErrorMessage"] != null && TempData["ErrorTitle"] != null)
        {
            <p style="color:black">@TempData["ErrorTitle"] | @TempData["ErrorMessage"]</p>
        }
    </div>
</section>