@{
    ViewBag.Title = "Success";
}

<style>
    .confirmation-container {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
</style>

<section class="confirmation-container" aria-labelledby="aspnetTitle">
    <div class="alert alert-success" role="alert">
        <h1>@ViewBag.Title!</h1>
        <h4>@TempData["ConfirmationMessage"]</h4>
    </div>
</section>
