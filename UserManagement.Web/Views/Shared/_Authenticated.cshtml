<ul class="navbar-nav flex-grow-1">
    @if (User.IsInRole("Administrator"))
    {
        <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dashboard <span class="caret"></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="@Url.Action("ManageUsers", "UserLogins")">Users</a>
                <a class="dropdown-item" href="@Url.Action("ManageRoles", "UserRoles")">Roles</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("About", "Home")" class="nav-link">About</a>
        </li>
